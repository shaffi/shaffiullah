{
    "name": "shaffiullahin",
    "version": "1.0.1",
    "main": "index.js",
    "jest": {
        "verbose": true,
        "collectCoverage": true,
        "coverageDirectory": "<rootDir>/coverage",
        "testURL": "http://localhost:8080",
        "transform": {
            "\\.(js|jsx)$": "./transformPreprocessor.js"
        },
        "moduleFileExtensions": [
            "js",
            "jsx"
        ],
        "moduleDirectories": [
            "node_modules"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
            "\\.(css|less|scss)$": "identity-obj-proxy",
            "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
            "^react$": "preact-compat",
            "^react-dom$": "preact-compat",
            "^create-react-class$": "preact-compat/lib/create-react-class",
            "^react-addons-css-transition-group$": "preact-css-transition-group"
        }
    },
    "scripts": {
        "start": "if-env NODE_ENV=production && yarn run -s serve || yarn run -s dev",
        "build": "preact build --clean --production --dest=dist --template template.html",
        "serve": "preact build && preact serve",
        "dev": "preact watch --template template.html",
        "lint": "eslint src",
        "tests-only": "jest --no-cache",
        "test": "eslint src && jest --no-cache"
    },
    "eslintConfig": {
        "extends": "eslint-config-synacor"
    },
    "devDependencies": {
        "coveralls": "^3.0.2",
        "eslint": "^5.2.0",
        "eslint-config-synacor": "^3.0.1",
        "if-env": "^1.0.4",
        "jest": "^23.4.2",
        "preact-cli": "^2.2.1",
        "preact-render-spy": "^1.3.0"
    },
    "dependencies": {
        "font-awesome": "^4.7.0",
        "foundation-sites": "~6.5.0-rc.2",
        "node-gyp": "^3.7.0",
        "node-pre-gyp": "^0.10.3",
        "foundation-sites": "^6.5.0-rc.2",
        "node-sass": "^4.9.2",
        "preact": "^8.2.9",
        "preact-compat": "^3.18.0",
        "preact-router": "^2.6.1",
        "sass-loader": "^7.0.3"
    }
}
